<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>ReporTube</title>

  <!-- Bulma CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">

  <!-- Material Design Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@mdi/font@7.3.67/css/materialdesignicons.min.css">

  <!-- Font Awesome (optional, for extra icons) -->
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <% if (typeof user !== 'undefined' && user) { %>
  <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <span class="icon-text">
          <span class="icon"><i class="mdi mdi-file-document-outline"></i></span>
          <span class="has-text-weight-bold">ReporTube</span>
        </span>
      </a>

      <!-- Mobile burger -->
      <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarMain">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarMain" class="navbar-menu">
      <div class="navbar-start">
        <% if (user.role === 'admin') { %>
          <a class="navbar-item" href="/admin/dashboard"><i class="mdi mdi-speedometer"></i>&nbsp;Dashboard</a>
          <a class="navbar-item" href="/admin/classes"><i class="mdi mdi-office-building"></i>&nbsp;Classes</a>
          <a class="navbar-item" href="/admin/students"><i class="mdi mdi-account-group"></i>&nbsp;Students</a>
          <a class="navbar-item" href="/admin/users"><i class="mdi mdi-account-badge"></i>&nbsp;Users</a>
          <a class="navbar-item" href="/admin/subjects"><i class="mdi mdi-book-open-variant"></i>&nbsp;Subjects</a>
          <a class="navbar-item" href="/admin/scores"><i class="mdi mdi-chart-bar"></i>&nbsp;Scores</a>
          <a class="navbar-item" href="/admin/reports/send"><i class="mdi mdi-email-send-outline"></i>&nbsp;Send Reports</a>
        <% } else if (user.role === 'teacher') { %>
          <a class="navbar-item" href="/teacher/dashboard"><i class="mdi mdi-speedometer"></i>&nbsp;Dashboard</a>
          <a class="navbar-item" href="/teacher/classes"><i class="mdi mdi-teach"></i>&nbsp;My Classes</a>
          <a class="navbar-item" href="/teacher/scores/my-classes"><i class="mdi mdi-pencil"></i>&nbsp;Enter Scores</a>
        <% } %>
      </div>

      <div class="navbar-end">
        <div class="navbar-item has-dropdown is-hoverable">
          <a class="navbar-link">
            <span class="icon"><i class="mdi mdi-account-circle"></i></span>
            &nbsp;<%= user.full_name %>
          </a>
          <div class="navbar-dropdown is-right">
            <a class="navbar-item" href="/auth/change-password">Change Password</a>
            <hr class="navbar-divider">
            <a class="navbar-item" href="/auth/logout">Logout</a>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <% } %>

  <main class="<%= typeof user !== 'undefined' && user ? 'section' : '' %>">
