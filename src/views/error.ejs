<%- include('partials/header') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
            <h1 class="mt-3"><%= message %></h1>
            <p class="text-muted"><%= error.status || 500 %> Error</p>
            <% if (error.stack && process.env.NODE_ENV === 'development') { %>
            <div class="alert alert-warning text-start mt-4">
                <h5>Stack Trace (Development Only):</h5>
                <pre><%= error.stack %></pre>
            </div>
            <% } %>
            <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-house"></i> Go Home
            </a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
