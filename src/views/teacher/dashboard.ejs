<%- include('../partials/header', { title: 'Teacher Dashboard' }) %>

<section class="section">
  <div class="container">

    <!-- Page Header -->
    <div class="level mb-5">
      <div class="level-left">
        <h2 class="title is-3">
          <span class="icon"><i class="mdi mdi-view-dashboard"></i></span>
          <span>Teacher Dashboard</span>
        </h2>
      </div>
      <div class="level-right">
        <div class="buttons">
          <a href="/teacher/scores/my-classes" class="button is-primary">
            <span class="icon"><i class="mdi mdi-clipboard-edit-outline"></i></span>
            <span>Enter Scores</span>
          </a>
          <a href="/teacher/classes" class="button is-info">
            <span class="icon"><i class="mdi mdi-school-outline"></i></span>
            <span>My Classes</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="columns mb-5">
      <div class="column is-6">
        <div class="box has-background-primary-light">
          <div class="level">
            <div class="level-left">
              <div>
                <p class="heading">Total Classes</p>
                <p class="title is-3"><%= stats.totalClasses %></p>
              </div>
            </div>
            <div class="level-right">
              <span class="icon is-large has-text-primary">
                <i class="mdi mdi-school-outline mdi-48px"></i>
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="column is-6">
        <div class="box has-background-info-light">
          <div class="level">
            <div class="level-left">
              <div>
                <p class="heading">Total Students</p>
                <p class="title is-3"><%= stats.totalStudents %></p>
              </div>
            </div>
            <div class="level-right">
              <span class="icon is-large has-text-info">
                <i class="mdi mdi-account-group-outline mdi-48px"></i>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- My Classes -->
    <div class="box">
      <h3 class="title is-4 mb-4">
        <span class="icon"><i class="mdi mdi-school-outline"></i></span>
        <span>My Classes</span>
      </h3>

      <% if (classes.length === 0) { %>
        <div class="notification is-info is-light">
          <span class="icon"><i class="mdi mdi-information-outline"></i></span>
          <span>No classes assigned yet. Contact your administrator to get classes assigned.</span>
        </div>
      <% } else { %>
        <div class="columns is-multiline">
          <% classes.forEach(function(classItem) { %>
            <div class="column is-4">
              <div class="card">
                <div class="card-content">
                  <div class="media">
                    <div class="media-left">
                      <span class="icon is-large has-text-primary">
                        <i class="mdi mdi-school mdi-36px"></i>
                      </span>
                    </div>
                    <div class="media-content">
                      <p class="title is-5"><%= classItem.name %></p>
                      <p class="subtitle is-6"><%= classItem.level %></p>
                      <p class="has-text-grey">
                        <span class="icon is-small"><i class="mdi mdi-account-group"></i></span>
                        <span><%= classItem.student_count || 0 %> students</span>
                      </p>
                    </div>
                  </div>
                </div>
                <footer class="card-footer">
                  <a href="/teacher/classes/<%= classItem.id %>/students/<%= classItem.subject_id %>" class="card-footer-item">
                    <span class="icon"><i class="mdi mdi-account-group-outline"></i></span>
                    <span>View Students</span>
                  </a>
                  <a href="/teacher/scores/entry?class_id=<%= classItem.id %>&subject_id=<%= classItem.subject_id %>&academic_year=2024&term=1" class="card-footer-item">
                    <span class="icon"><i class="mdi mdi-clipboard-edit-outline"></i></span>
                    <span>Enter Scores</span>
                  </a>
                </footer>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>

    <!-- Quick Actions -->
    <div class="box">
      <h3 class="title is-4 mb-4">
        <span class="icon"><i class="mdi mdi-lightning-bolt-outline"></i></span>
        <span>Quick Actions</span>
      </h3>
      
      <div class="buttons">
        <a href="/teacher/scores/my-classes" class="button is-primary">
          <span class="icon"><i class="mdi mdi-clipboard-edit-outline"></i></span>
          <span>Enter Student Scores</span>
        </a>
        <a href="/teacher/classes" class="button is-info">
          <span class="icon"><i class="mdi mdi-school-outline"></i></span>
          <span>View All Classes</span>
        </a>
        <a href="/teacher/reports/student" class="button is-success">
          <span class="icon"><i class="mdi mdi-file-document-outline"></i></span>
          <span>Generate Reports</span>
        </a>
        <a href="/auth/change-password" class="button is-light">
          <span class="icon"><i class="mdi mdi-key-outline"></i></span>
          <span>Change Password</span>
        </a>
      </div>
    </div>

  </div>
</section>

<%- include('../partials/footer') %>
