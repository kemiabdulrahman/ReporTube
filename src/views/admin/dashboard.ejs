<%- include('../partials/header', { title: 'Admin Dashboard' }) %>

<section class="section">
  <div class="container">

    <!-- Page Header -->
    <div class="level mb-5">
      <div class="level-left">
        <h2 class="title is-3">
          <span class="icon"><i class="mdi mdi-view-dashboard"></i></span>
          <span>Admin Dashboard</span>
        </h2>
        <p class="subtitle is-5">School Management System Overview</p>
      </div>
      <div class="level-right">
        <div class="buttons">
          <a href="/admin/users/add" class="button is-primary">
            <span class="icon"><i class="mdi mdi-account-plus-outline"></i></span>
            <span>Add User</span>
          </a>
          <a href="/admin/students/add" class="button is-info">
            <span class="icon"><i class="mdi mdi-school-outline"></i></span>
            <span>Add Student</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="columns mb-5">
      <div class="column is-3">
        <div class="box has-background-primary-light">
          <div class="level">
            <div class="level-left">
              <div>
                <p class="heading">Total Classes</p>
                <p class="title is-3"><%= stats.totalClasses %></p>
              </div>
            </div>
            <div class="level-right">
              <span class="icon is-large has-text-primary">
                <i class="mdi mdi-school-outline mdi-48px"></i>
              </span>
            </div>
          </div>
          <div class="level mt-3">
            <div class="level-left">
              <a href="/admin/classes" class="button is-primary is-small">
                <span class="icon"><i class="mdi mdi-eye"></i></span>
                <span>View All</span>
              </a>
            </div>
            <div class="level-right">
              <a href="/admin/classes/add" class="button is-primary is-outlined is-small">
                <span class="icon"><i class="mdi mdi-plus"></i></span>
                <span>Add</span>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-3">
        <div class="box has-background-info-light">
          <div class="level">
            <div class="level-left">
              <div>
                <p class="heading">Total Students</p>
                <p class="title is-3"><%= stats.totalStudents %></p>
              </div>
            </div>
            <div class="level-right">
              <span class="icon is-large has-text-info">
                <i class="mdi mdi-account-group-outline mdi-48px"></i>
              </span>
            </div>
          </div>
          <div class="level mt-3">
            <div class="level-left">
              <a href="/admin/students" class="button is-info is-small">
                <span class="icon"><i class="mdi mdi-eye"></i></span>
                <span>View All</span>
              </a>
            </div>
            <div class="level-right">
              <a href="/admin/students/add" class="button is-info is-outlined is-small">
                <span class="icon"><i class="mdi mdi-plus"></i></span>
                <span>Add</span>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-3">
        <div class="box has-background-success-light">
          <div class="level">
            <div class="level-left">
              <div>
                <p class="heading">Total Teachers</p>
                <p class="title is-3"><%= stats.totalTeachers %></p>
              </div>
            </div>
            <div class="level-right">
              <span class="icon is-large has-text-success">
                <i class="mdi mdi-account-tie-outline mdi-48px"></i>
              </span>
            </div>
          </div>
          <div class="level mt-3">
            <div class="level-left">
              <a href="/admin/users" class="button is-success is-small">
                <span class="icon"><i class="mdi mdi-eye"></i></span>
                <span>View All</span>
              </a>
            </div>
            <div class="level-right">
              <a href="/admin/users/add" class="button is-success is-outlined is-small">
                <span class="icon"><i class="mdi mdi-plus"></i></span>
                <span>Add</span>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-3">
        <div class="box has-background-warning-light">
          <div class="level">
            <div class="level-left">
              <div>
                <p class="heading">Total Subjects</p>
                <p class="title is-3"><%= stats.totalSubjects %></p>
              </div>
            </div>
            <div class="level-right">
              <span class="icon is-large has-text-warning">
                <i class="mdi mdi-book-multiple-outline mdi-48px"></i>
              </span>
            </div>
          </div>
          <div class="level mt-3">
            <div class="level-left">
              <a href="/admin/subjects" class="button is-warning is-small">
                <span class="icon"><i class="mdi mdi-eye"></i></span>
                <span>View All</span>
              </a>
            </div>
            <div class="level-right">
              <a href="/admin/subjects/add" class="button is-warning is-outlined is-small">
                <span class="icon"><i class="mdi mdi-plus"></i></span>
                <span>Add</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="columns">
      <div class="column is-8">
        <!-- Recent Classes -->
        <div class="box">
          <h3 class="title is-4 mb-4">
            <span class="icon"><i class="mdi mdi-school-outline"></i></span>
            <span>Recent Classes</span>
          </h3>

          <% if (classes.length === 0) { %>
            <div class="notification is-info is-light">
              <span class="icon"><i class="mdi mdi-information-outline"></i></span>
              <span>No classes created yet. <a href="/admin/classes/add">Add the first class</a>.</span>
            </div>
          <% } else { %>
            <div class="table-container">
              <table class="table is-fullwidth is-striped">
                <thead>
                  <tr>
                    <th>Class Name</th>
                    <th>Level</th>
                    <th>Academic Year</th>
                    <th>Students</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% classes.slice(0, 5).forEach(function(classItem) { %>
                    <tr>
                      <td><strong><%= classItem.name %></strong></td>
                      <td><span class="tag is-info is-light"><%= classItem.level %></span></td>
                      <td><span class="tag is-primary is-light"><%= classItem.academic_year %></span></td>
                      <td>
                        <span class="tag is-success is-light">
                          <span class="icon"><i class="mdi mdi-account-group"></i></span>
                          <span><%= classItem.student_count || 0 %></span>
                        </span>
                      </td>
                      <td>
                        <div class="buttons are-small">
                          <a href="/admin/classes/<%= classItem.id %>" class="button is-info is-outlined">
                            <span class="icon"><i class="mdi mdi-eye"></i></span>
                            <span>View</span>
                          </a>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <% if (classes.length > 5) { %>
              <div class="has-text-right">
                <a href="/admin/classes" class="button is-light">
                  <span class="icon"><i class="mdi mdi-eye"></i></span>
                  <span>View All Classes (<%= classes.length %>)</span>
                </a>
              </div>
            <% } %>
          <% } %>
        </div>

        <!-- Recent Students -->
        <div class="box">
          <h3 class="title is-4 mb-4">
            <span class="icon"><i class="mdi mdi-account-group-outline"></i></span>
            <span>Recent Students</span>
          </h3>

          <% if (students.length === 0) { %>
            <div class="notification is-info is-light">
              <span class="icon"><i class="mdi mdi-information-outline"></i></span>
              <span>No students registered yet. <a href="/admin/students/add">Add the first student</a>.</span>
            </div>
          <% } else { %>
            <div class="table-container">
              <table class="table is-fullwidth is-striped">
                <thead>
                  <tr>
                    <th>Student Name</th>
                    <th>Admission Number</th>
                    <th>Class</th>
                    <th>Gender</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% students.forEach(function(student) { %>
                    <tr>
                      <td>
                        <div class="media">
                          <div class="media-left">
                            <span class="icon has-text-primary">
                              <i class="mdi mdi-account-circle"></i>
                            </span>
                          </div>
                          <div class="media-content">
                            <strong><%= student.first_name %> <%= student.last_name %></strong>
                          </div>
                        </div>
                      </td>
                      <td><span class="tag is-light"><%= student.admission_number %></span></td>
                      <td><span class="tag is-info is-light"><%= student.class_name || 'N/A' %></span></td>
                      <td>
                        <% if (student.gender) { %>
                          <span class="tag is-light <%= student.gender === 'Male' ? 'is-info' : 'is-success' %>">
                            <span class="icon">
                              <i class="mdi mdi-<%= student.gender === 'Male' ? 'gender-male' : 'gender-female' %>"></i>
                            </span>
                            <span><%= student.gender %></span>
                          </span>
                        <% } else { %>
                          N/A
                        <% } %>
                      </td>
                      <td>
                        <div class="buttons are-small">
                          <a href="/admin/students/edit/<%= student.id %>" class="button is-warning is-outlined">
                            <span class="icon"><i class="mdi mdi-pencil"></i></span>
                            <span>Edit</span>
                          </a>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <div class="has-text-right">
              <a href="/admin/students" class="button is-light">
                <span class="icon"><i class="mdi mdi-eye"></i></span>
                <span>View All Students</span>
              </a>
            </div>
          <% } %>
        </div>
      </div>

      <div class="column is-4">
        <!-- Quick Actions -->
        <div class="box">
          <h3 class="title is-4 mb-4">
            <span class="icon"><i class="mdi mdi-lightning-bolt-outline"></i></span>
            <span>Quick Actions</span>
          </h3>
          
          <div class="content">
            <p><strong>User Management</strong></p>
            <div class="buttons">
              <a href="/admin/users/add" class="button is-primary is-small is-fullwidth">
                <span class="icon"><i class="mdi mdi-account-plus-outline"></i></span>
                <span>Add New User</span>
              </a>
              <a href="/admin/users" class="button is-light is-small is-fullwidth">
                <span class="icon"><i class="mdi mdi-account-group"></i></span>
                <span>Manage Users</span>
              </a>
            </div>

            <p><strong>Academic Management</strong></p>
            <div class="buttons">
              <a href="/admin/classes/add" class="button is-info is-small is-fullwidth">
                <span class="icon"><i class="mdi mdi-school-outline"></i></span>
                <span>Add New Class</span>
              </a>
              <a href="/admin/students/add" class="button is-success is-small is-fullwidth">
                <span class="icon"><i class="mdi mdi-account-plus"></i></span>
                <span>Add New Student</span>
              </a>
              <a href="/admin/subjects/add" class="button is-warning is-small is-fullwidth">
                <span class="icon"><i class="mdi mdi-book-plus-outline"></i></span>
                <span>Add New Subject</span>
              </a>
            </div>

            <p><strong>Reports & Scores</strong></p>
            <div class="buttons">
              <a href="/admin/scores" class="button is-danger is-small is-fullwidth">
                <span class="icon"><i class="mdi mdi-clipboard-check-outline"></i></span>
                <span>Review Scores</span>
              </a>
              <a href="/admin/reports/send" class="button is-link is-small is-fullwidth">
                <span class="icon"><i class="mdi mdi-email-send-outline"></i></span>
                <span>Send Reports</span>
              </a>
            </div>
          </div>
        </div>

        <!-- System Info -->
        <div class="box has-background-light">
          <h4 class="title is-5 mb-3">
            <span class="icon"><i class="mdi mdi-information-outline"></i></span>
            <span>System Information</span>
          </h4>
          
          <div class="content is-small">
            <p><strong>Current Academic Year:</strong> 2024</p>
            <p><strong>Current Term:</strong> Term 1</p>
            <p><strong>Last Login:</strong> <%= new Date().toLocaleDateString() %></p>
            <p><strong>System Status:</strong> <span class="tag is-success is-light">Online</span></p>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<%- include('../partials/footer') %>
