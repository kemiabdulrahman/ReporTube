{
  "name": "reportube",
  "version": "1.0.0",
  "description": "Academic reporting platform for schools",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "migrate": "node src/config/migrate.js",
    "seed": "node src/config/seed.js"
  },
  "keywords": [
    "academic",
    "reporting",
    "school",
    "grading"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "express-session": "^1.17.3",
    "connect-pg-simple": "^9.0.1",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.11"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
